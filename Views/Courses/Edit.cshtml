@model IEnumerable<MileStone_Attendance_Management.Models.Courses>

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CourseId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CourseType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CourseName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            if (item.CourseId == ViewBag.Id)
            {
                <tr>
                    <form asp-action="Edit" method="post">
                        <td>
                            <input name="CourseId" class="form-control" value="@item.CourseId" placeholder="@Html.DisplayNameFor(model => model.CourseId)" />
                        </td>
                        <td>
                            <input name="CourseType" class="form-control" value="@item.CourseType" placeholder="@Html.DisplayNameFor(model => model.CourseType)" />
                        </td>
                        <td>
                            <input name="CourseName" class="form-control" value="@item.CourseName" placeholder="@Html.DisplayNameFor(model => model.CourseName)" />
                        </td>
                        <td>
                            <button type="submit" class="btn btn-success">Apply</button> |
                            <a asp-action="Index" class="btn btn-warning">Cancel</a>
                        </td>
                    </form>
                </tr>
            }
            else
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CourseId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CourseType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CourseName)
                    </td>
                    <td>
                        <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.CourseId">Edit</a> |
                        <a asp-action="Details" class="btn btn-warning" asp-route-id="@item.CourseId">Details</a> |
                        <button asp-action="Delete" class="btn btn-danger" asp-route-id="@item.CourseId" onclick='myDeleteCourse("/Courses/Delete/@item.CourseId","@item.CourseName")'>Delete</button>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}