@model IEnumerable<MileStone_Attendance_Management.Models.Degrees>

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Degrees</h4>
<hr />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NormalizedDegree)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Degree)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            if(item.NormalizedDegree==ViewBag.Id)
            {
                <tr>
                    <form asp-action="Edit" asp-route-id="@item.NormalizedDegree" method="post">
                        <td>
                            @Html.DisplayFor(modelItem => item.NormalizedDegree)
                        </td>
                        <td>
                        <input name="Degree" class="form-control" value="@item.Degree" placeholder="@Html.DisplayNameFor(model => model.Degree)" />
                        </td>
                        <td>
                            <button type="submit" class="btn btn-success">Apply</button> |
                            <a asp-action="Index" class="btn btn-danger">Cancel</a>
                        </td>
                    </form>
                </tr>
            }
            else{
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NormalizedDegree)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Degree)
                    </td>
                    <td>
                        <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.NormalizedDegree">Edit</a> |
                        <a asp-action="Details" class="btn btn-warning" asp-route-id="@item.NormalizedDegree">Details</a> |
                        <button asp-action="Delete" class="btn btn-danger" asp-route-id="@item.NormalizedDegree" onclick='myDeleteDegree("/Degrees/Delete/@item.NormalizedDegree","@item.Degree")'>Delete</button>

                    </td>
                </tr>
            }
        }
        
    </tbody>
</table>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
